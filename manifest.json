{
    "name": "Monica",
    "id": "monica",
    "packaging_format": 1,
    "description": {
        "en": " Personal Relationship Manager - a new kind of CRM to organize interactions with your friends and family."
    },
    "version": "3.7.0~ynh1",
    "url": "https://monicahq.com",
    "upstream": {
        "license": "GPL-3.0",
        "website": "https://monicahq.com",
        "code": "https://github.com/monicahq/monica"
    },
    "license": "GPL-3.0",
    "maintainer": {
        "name": "Sebastian Gumprich",
        "email": "yunohost@gumpri.ch",
        "url": "http://github.com/rndmh3ro/monica_ynh"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.4-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/monica",
                "default": "/monica"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["cs","de","en","es","fr","he","it","nl","pt","ru","zh"],
                "default": "en"
            },
            {
                "name": "password",
                "type": "password"
            }
        ]
    }
}
